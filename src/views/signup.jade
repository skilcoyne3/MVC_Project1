extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/face.png", alt="face logo")
    .navlink
      a(href="/login") Login
    .navlink
      a(href="/signup") Sign up
  section#signup
    form#signupForm(class="mainForm2", name="signupForm", action="/signup", method="POST")
      h2.formTitle Sign Up
      label(for='username') Create Username: 
      input#user2(type='text', name='username')
      label(for='pass') Create Password: 
      input#pass3(type='password', name='pass')
      label(for='pass2') Confirm Password: 
      input#pass4(type='password', name='pass2')
      a#signupSubmit.formSubmit2(href='#') Create Account
      a.logbtn(href='/login') Login
  #domoMessage
    img#speech(src="/assets/img/speech.png", alt="speech box")
    h3
      span#errorMessage
    img#domo(src="assets/img/domo.png", alt="domo")
block scripts
        script(src="/assets/client.js")