extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      p#logo Manage Payments
    .navlink
      a(href="/login") Login
    .navlink
      a(href="/signup") Sign up
  section#login
    form#loginForm(class="mainForm", name="loginForm", action="/login", method="POST")
      h2 Login 
      input#user(type="text", name="username", placeholder="username")
      input#pass(type="password", name="pass", placeholder="password")
      #domoMessage2
        h3
          span#errorMessage2 Wrong username or password
      a#loginSubmit(class="formSubmit", href="#") Sign In
      h4 or
      a(href="/signup" class="create") Sign up
block scripts
    script(src="/assets/client.js")